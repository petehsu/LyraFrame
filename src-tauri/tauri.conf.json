{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LyraFrame",
  "version": "0.1.0",
  "identifier": "com.lyraframe.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LyraFrame",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI-Powered Programmatic Video Editor",
    "longDescription": "LyraFrame is an AI-powered programmatic video editor that allows you to create stunning videos with code, AI assistance, and visual editing.",
    "copyright": "Â© 2026 Pete Hsu",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}